package bearsCream;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;
import java.util.StringTokenizer;

public class Result {

	ArrayList<RankPlayer> rank = new ArrayList<RankPlayer>(10); 
	
	public Result(){
		
	}
	
	public void readFile(){
		String name;
		int score;
		try {
			String csvStr="";
			String tmpStr="";
			FileReader fr=new FileReader(new File("score.txt"));
			BufferedReader br=new BufferedReader(fr);
			do{
				tmpStr=br.readLine();
				if(tmpStr!=null){
					csvStr+=tmpStr+"\t";
				}
			}while(tmpStr!=null);
			
			StringTokenizer parse=new StringTokenizer(csvStr,"\t");
			for(int i=0;i<10;i++){
				name=parse.nextToken();
				score=Integer.valueOf(parse.nextToken());
				rank.add(new RankPlayer(name,score));
			}
		}catch(FileNotFoundException e){
			System.out.println("잘못된 파일 이름");
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public boolean compareRank(){
		if(true){
			
			return true;
		}else{
			return false;
		}
	}
	
	public void inputName(){
		
	}
	
	public void insertInfo(){
		
	}
	
	public void writeFile(){
		
	}

}
